# Server environment variables
NODE_ENV=development
PORT=5001

# MongoDB connection
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/cs2marketplace

# Session configuration
SESSION_SECRET=your_session_secret_here

# Steam API configuration
STEAMWEBAPI_KEY=your_steam_web_api_key_here
STEAM_API_KEY=your_steam_api_key_here

# URLs for authentication
CLIENT_URL=http://localhost:3000
CALLBACK_URL=http://localhost:5001/auth/steam/return

# For production, use these values:
# NODE_ENV=production
# CLIENT_URL=https://your-frontend-url.com
# CALLBACK_URL=https://your-backend-url.com/auth/steam/return 