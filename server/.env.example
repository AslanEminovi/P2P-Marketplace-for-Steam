# CS2 Marketplace Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/cs2marketplace

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# Redis Configuration (required for online status functionality)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=optional_password_here
REDIS_PREFIX=cs2market:

# Socket.IO Configuration
SOCKET_PATH=/socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_RATE_LIMITING=false
ENABLE_MARKET_POLLING=true

# Session configuration
SESSION_SECRET=your_session_secret_here

# Steam API configuration
STEAMWEBAPI_KEY=your_steam_web_api_key_here
STEAM_API_KEY=your_steam_api_key_here

# URLs for authentication
CLIENT_URL=http://localhost:3000
CALLBACK_URL=http://localhost:5001/auth/steam/return

# For production, use these values:
# NODE_ENV=production
# CLIENT_URL=https://your-frontend-url.com
# CALLBACK_URL=https://your-backend-url.com/auth/steam/return

# Redis Configuration
USE_REDIS=true
REDIS_PASSWORD=your_redis_password
SERVER_ID=server1 